<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Pahana Edu Book Shop</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Regular Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.DashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.CustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.BookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.BillServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AutocompleteServlet</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.persistence.servlet.AutocompleteServlet</servlet-class>
    </servlet>

    <!-- Web Services (REST API) -->
    <servlet>
        <servlet-name>BookWebService</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.webservice.BookWebService</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerWebService</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.webservice.CustomerWebService</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BillWebService</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.webservice.BillWebService</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AuthWebService</servlet-name>
        <servlet-class>com.pahanaedu.bookshop.webservice.AuthWebService</servlet-class>
    </servlet>

    <!-- Regular Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/bills</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AutocompleteServlet</servlet-name>
        <url-pattern>/autocomplete</url-pattern>
    </servlet-mapping>

    <!-- Web Service Mappings (API Endpoints) -->
    <servlet-mapping>
        <servlet-name>BookWebService</servlet-name>
        <url-pattern>/api/books</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookWebService</servlet-name>
        <url-pattern>/api/books/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerWebService</servlet-name>
        <url-pattern>/api/customers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerWebService</servlet-name>
        <url-pattern>/api/customers/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BillWebService</servlet-name>
        <url-pattern>/api/bills</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BillWebService</servlet-name>
        <url-pattern>/api/bills/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthWebService</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.pahanaedu.bookshop.persistence.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>